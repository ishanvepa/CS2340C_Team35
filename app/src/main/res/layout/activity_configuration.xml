<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurationActivity">

    <Button
        android:id="@+id/Easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="287dp" />

    <TextView
        android:id="@+id/Difficulty"
        android:layout_width="210dp"
        android:layout_height="59dp"
        android:text="Difficulty:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/chooseSprite"
        android:layout_width="355dp"
        android:layout_height="55dp"
        android:text="Choose Sprite:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="376dp" />

    <Button
        android:id="@+id/Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="287dp" />

    <Button
        android:id="@+id/Hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="287dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="98dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Input"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:hint="Input Name Here:" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/Mario"
        android:layout_width="99dp"
        android:layout_height="169dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mariosprite"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="445dp" />

    <ImageButton
        android:id="@+id/Luigi"
        android:layout_width="119dp"
        android:layout_height="167dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/luigisprite"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="447dp" />

    <ImageButton
        android:id="@+id/Peach"
        android:layout_width="94dp"
        android:layout_height="165dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/peachsprite"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="449dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="157dp"
        android:layout_height="77dp"
        android:text="Next"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="637dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="46dp" />

</androidx.constraintlayout.widget.ConstraintLayout>