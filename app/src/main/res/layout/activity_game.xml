<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.GameActivity">

        <RelativeLayout
            android:id="@+id/luigiSpriteLayout"
            android:layout_width="48dp"
            android:layout_height="93dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="176dp">

            <ImageView
                android:id="@+id/luigiCharacterMario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/luigisprite"
                app:srcCompat="@drawable/luigisprite" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/peachSpriteLayout"
            android:layout_width="48dp"
            android:layout_height="93dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="268dp">

            <ImageView
                android:id="@+id/peachCharacterMario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/peachsprite"
                app:srcCompat="@drawable/peachsprite" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bowserSpriteLayout"
            android:layout_width="48dp"
            android:layout_height="93dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="368dp">

            <ImageView
                android:id="@+id/bowserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/bowser"
                app:srcCompat="@drawable/bowser" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/booSpriteLayout"
            android:layout_width="48dp"
            android:layout_height="93dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="468dp">

            <ImageView
                android:id="@+id/booImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/boo"
                app:srcCompat="@drawable/boo" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/koopaSpriteLayout"
            android:layout_width="48dp"
            android:layout_height="93dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="568dp">

            <ImageView
                android:id="@+id/koopaImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/koopa"
                app:srcCompat="@drawable/koopa" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/goombaSpriteLayout"
            android:layout_width="48dp"
            android:layout_height="93dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="568dp">

            <ImageView
                android:id="@+id/goombaImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/goombawalk"
                app:srcCompat="@drawable/goombawalk" />

        </RelativeLayout>
        <TextView
            android:id="@+id/HPView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:text="HP: " />

        <TextView
            android:id="@+id/Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:text="Score: " />

        <TextView
            android:id="@+id/timeElapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            android:background="#FFFFFF"
            android:text="Time Elapsed:" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="80dp"
            android:background="#FFFFFF"
            android:text="Level:" />

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:background="#FFFFFF"
            android:text="Level:" />

        <TextView
            android:id="@+id/difficultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="TextView" />

        <RelativeLayout
            android:id="@+id/marioSpriteLayout"
            android:layout_width="48dp"
            android:layout_height="93dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="84dp">

            <ImageView
                android:id="@+id/mainCharacterMario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/mariosprite" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/walls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.GameActivity">

        <!-- Your existing layout elements -->

        <!-- Example of a wall using a View element -->


        <!-- Add more walls as needed -->

    </RelativeLayout>


</RelativeLayout>